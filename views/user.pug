extends layout

block content
  div.bg-light.p-3.p-sm-5.mb-4.border-top
    div.container
      h1.display-4 #{user.displayName}
      p.lead #{user.userName}
      //- hr.my-4
      //- p #{user.biography}
      //- a.btn.btn-primary.btn-lg(href=`https://github.com/${user.userName}` role="button") GitHub
  div.container.mt-2
    if applications.length
      h1 作品一覧
        div.row.row-cols-1.row-cols-lg-2.g-4
          each application in applications
            div.col
              div.card.h-100
                img.card-img-top.index-page(src=application.applicationThumbnail alt="サムネイル")
                div.card-body
                  h5.card-title #{application.applicationName}
                  p.card-text #{application.applicationDescription}
                  a.btn.btn-primary(href=`/applications/${application.applicationId}`) 詳細表示
                div.card-footer
                  small.text-muted #{application.formattedCpdatedAt}
    else
      h1 まだ作品はありません